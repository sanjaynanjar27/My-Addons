<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="new_hospital_appointment_form_view_form" model="ir.ui.view">
        <field name="name">new.hospital.appointment.form.view.form</field>
        <field name="model">hospital.appointment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Appointment Details">
                        <field name="doctor_id"/>
                        <field name="patient_id"/>
                        <field name="appointment_date"/>
                        <field name="treatment_end_date"/>
                        <field name="create_uid" readonly="1" class="oe_inline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
