<odoo>
    <data>
        <!-- XLSX Report Template -->
        <template id="action_project_task_report_xlsx_template">
            <t t-call="web.external_layout">
                <t t-foreach="tasks" t-as="task">
                    <table style="width:100%;border:1px solid black;">
                        <thead>
                            <tr>
                                <th style="border:1px solid black; padding: 5px;">Task Name</th>
                                <th style="border:1px solid black; padding: 5px;">User</th>
                                <th style="border:1px solid black; padding: 5px;">Company</th>
                                <th style="border:1px solid black; padding: 5px;">Email</th>
                                <th style="border:1px solid black; padding: 5px;">Phone</th>
                                <th style="border:1px solid black; padding: 5px;">Project</th>
                                <th style="border:1px solid black; padding: 5px;">Start Date</th>
                                <th style="border:1px solid black; padding: 5px;">Project Date</th>
                                <th style="border:1px solid black; padding: 5px;">Description</th>
                                <th style="border:1px solid black; padding: 5px;">Team Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="border:1px solid black; padding: 5px;" t-esc="task.name"/>
                                <td style="border:1px solid black; padding: 5px;" t-esc="task.user_id.name"/>
                                <td style="border:1px solid black; padding: 5px;" t-esc="task.company_id.name"/>
                                <td style="border:1px solid black; padding: 5px;" t-esc="task.company_id.email"/>
                                <td style="border:1px solid black; padding: 5px;" t-esc="task.company_id.phone"/>
                                <td style="border:1px solid black; padding: 5px;" t-esc="task.project_info.company_id"/>
                                <td style="border:1px solid black; padding: 5px;" t-esc="task.project_info.date_start"/>
                                <td style="border:1px solid black; padding: 5px;" t-esc="task.project_info.date"/>
                                <td style="border:1px solid black; padding: 5px;" t-esc="task.project_info.description"/>
                                <td style="border:1px solid black; padding: 5px;" t-esc="task.project_info.team_name"/>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </template>
    </data>
</odoo>
