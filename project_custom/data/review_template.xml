<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="web_review_template" name="Product Review Page">
            <t t-call="website.layout">
                <style>
                    .rating {
                    direction: rtl;
                    unicode-bidi: bidi-override;
                    display: inline-flex;
                    font-size: 2rem;
                    }

                    .rating input {
                    display: none;
                    }

                    .rating label {
                    cursor: pointer;
                    color: #ccc;
                    transform: rotate(0deg);
                    transition: color 0.2s, transform 0.2s;
                    }

                    .rating input:checked ~ label,
                    .rating label:hover,
                    .rating label:hover ~ label {
                    color: #f5c518;
                    }

                    .rating label:hover,
                    .rating label:hover ~ label {
                    transform: rotate(-10deg);
                    }
                </style>
                <div class="container">
                    <h1>Product Review</h1>
                    <div class="row">
                        <t t-foreach="delivery_items" t-as="item">
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <!-- Product Image -->
                                    <img t-att-src="item['image_url']" class="card-img-top" alt="Product Image"/>
                                    <!-- Product Details -->
                                    <div class="card-body">
                                        <h5 class="card-title" t-esc="item['product_name']"></h5>
                                        <form action="/submit/review" method="post">
                                            <h6>Rate this product:</h6>
                                            <div class="form-group">
                                                <div class="rating">
                                                    <input type="radio" id="star5" name="rating" value="5"/>
                                                    <label for="star5" title="5 stars">★</label>
                                                    <input type="radio" id="star4" name="rating" value="4"/>
                                                    <label for="star4" title="4 stars">★</label>
                                                    <input type="radio" id="star3" name="rating" value="3"/>
                                                    <label for="star3" title="3 stars">★</label>
                                                    <input type="radio" id="star2" name="rating" value="2"/>
                                                    <label for="star2" title="2 stars">★</label>
                                                    <input type="radio" id="star1" name="rating" value="1"/>
                                                    <label for="star1" title="1 star">★</label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <textarea name="review_description" rows="4" class="form-control"
                                                          placeholder="Write your review here..."></textarea>
                                            </div>
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <input type="hidden" name="product_id" t-att-value="item['product_id']"/>
                                            <button type="submit" class="btn btn-success submit-btn mt-3">Submit
                                                Review
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
