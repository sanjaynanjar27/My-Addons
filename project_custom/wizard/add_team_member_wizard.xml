<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_project_team_add_member_wizard_form" model="ir.ui.view">
        <field name="name">project.team.add.member.wizard.form</field>
        <field name="model">project.team.add.member.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Member to Teams">
                <sheet>
                    <group>
                        <field name="member_id"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Add Member" type="object" name="add_member" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>